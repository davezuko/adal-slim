{
    "include": ["lib"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["es2015", "dom"],
        "sourceMap": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "importHelpers": true,
        "noEmitHelpers": true
    }
}
